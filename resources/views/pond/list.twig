{% extends 'templates/app.twig' %}

{% block content %}
    <h1>Pond List</h1>
    <table class="table">
        <tr>
            <th>Name</th>
            <th>Kois</th>
            <th>API Key</th>
            <th>API Secret</th>
        </tr>
        {% for pond in ponds %}
            <tr>
                <td><a href="{{ path_for('pond.view', {'id': pond.id}) }}">{{ pond.name }}</a></td>
                <td>{{ pond.kois|length }}</td>
                <td>{{ pond.api_key }}</td>
                <td>{{ pond.api_secret }}</td>
            </tr>
        {% endfor %}
    </table>
    <a href="{{ path_for('pond.create') }}" class="btn btn-primary">Create Pond</a>
{% endblock %}